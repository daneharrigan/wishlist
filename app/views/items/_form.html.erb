<div class="form-actions">
  <h3>Add an Item To a List</h3>
  <%= form_for [user, item], html: { class: "form-vertical" } do |f| %>
    <div class="control-group">
      <%= f.text_field :name, placeholder: "New Item Name...", class: "input-xlarge" %>
      <%= f.text_field :url, placeholder: "Item Website...", class: "input-xlarge" %>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.hidden_field :creator_id %>
        <%= f.button "Add Gift Idea", name: "item[want]", value: 1, class: "btn btn-primary btn-large" %>
        <%= f.button "No Thank You", name: "item[want]", value: 0, class: "btn btn-danger btn-large" %>
      </div>
    </div>
  <% end %>
</div>
