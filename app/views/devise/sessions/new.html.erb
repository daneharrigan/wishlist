<h2>Sign in</h2>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.email_field :email, placeholder: "Email Address..." %></div>
  <div><%= f.password_field :password, placeholder: "Password..." %></div>

  <% if devise_mapping.rememberable? -%>
    <%= f.hidden_field :remember_me, value: 1 %>
  <% end -%>

  <div><%= f.submit "Sign In", class: "btn-primary btn-large" %></div>
<% end %>

